{
  "include": ["packages/*/src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "compilerOptions": {
    "types": ["./packages/monitoring/src", "jest"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "preserve",
    "target": "es5",
    "lib": ["esnext"],
    "noEmit": true,
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  }
}
